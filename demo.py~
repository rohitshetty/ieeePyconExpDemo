import pygame,sys,time,math
from pygame.locals import *
angle =0
x,y=0,0
i=0
RADIUS=math.sqrt(200**2*202**2)
RANGE=360
XRANGE=1200
YRANGE=600
center=(200,202)
def rotate(pic,ang):
 orig=pic.get_rect()
 orig.center=pic.get_rect().center
 pic=pygame.transform.rotate(pic,ang)
 
 return pic



size=(1360,700)
col=(175,109,202)
screen=pygame.display.set_mode(size)
logo=pygame.image.load("pyconau_logo.png")
screen.fill(col)

pygame.init()

while(1):
 

 for event in pygame.event.get():
  if event.type==QUIT:
   sys.exit()
 

 for i in range(0,XRANGE-300,10): 
  screen.fill(col)

  if(angle<RANGE):
   angle=angle+1
   copy=logo
   print copy.get_rect().center
   copy=rotate(copy,angle)
  else:
   angle=0
  if(math.sin(math.radians(-1*i/XRANGE*1.0))*15.0*YRANGE<YRANGE-300):
 #copy.get_rect(center =(i,100+math.sin(math.radians(i/XRANGE))*YRANGE) )
   screen.blit(copy,(i,180+math.sin(math.radians(-1*i/XRANGE*1.0))*15.0*YRANGE))
   print (i,math.sin(math.radians(-2*i/XRANGE*1.0))*10.0*YRANGE,XRANGE-200)
   pygame.display.update()
   time.sleep(0.1)
 for i in range(-1*(XRANGE-300),0,10): 
  screen.fill(col)

  if(angle<RANGE):
   angle=angle+1
   copy=logo
   print copy.get_rect().center
   copy=rotate(copy,angle)
  else:
   angle=0
  if(math.sin(math.radians(-1*i/XRANGE*1.0))*15.0*YRANGE<YRANGE-300):
 #copy.get_rect(center =(i,100+math.sin(math.radians(i/XRANGE))*YRANGE) )
   screen.blit(copy,(-1*i,180+math.sin(math.radians(-2*i/XRANGE*1.0))*15.0*YRANGE))
  
   print (-1*i,math.sin(math.radians(-5*i/XRANGE*1.0))*10.0*YRANGE,XRANGE-200)
   pygame.display.update()
   time.sleep(0.1)
 
